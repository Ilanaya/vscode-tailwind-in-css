{
    "name": "tailwind-in-css",
    "displayName": "Tailwind In Css",
    "publisher": "maIIady",
    "version": "0.0.0-dev",
    "license": "MIT",
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:css",
        "onLanguage:scss",
        "onLanguage:sass",
        "onLanguage:less",
        "onLanguage:vue"
    ],
    "contributes": {},
    "scripts": {
        "start": "vscode-framework start",
        "build": "tsc && vscode-framework build",
        "prettier": "prettier --check \"src/**/*.{ts,tsx,ts}\" --ignore-path .gitignore",
        "lint": "eslint src/**",
        "test": "vitest --globals"
    },
    "devDependencies": {
        "@types/node": "^17.0.35",
        "@types/vscode": "^1.67.0",
        "@zardoy/tsconfig": "^1.5.0",
        "eslint": "^8.16.0",
        "eslint-config-zardoy": "^0.2.11",
        "typescript": "^4.6.4"
    },
    "dependencies": {
        "@unocss/core": "^0.44.5",
        "@zardoy/utils": "^0.0.8",
        "postcss": "^8.4.14",
        "@unocss/preset-wind": "^0.34.1",
        "@zardoy/vscode-utils": "^0.0.17",
        "string-dedent": "^3.0.1",
        "vitest": "^0.16.0",
        "vscode-framework": "^0.0.18"
    },
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "proseWrap": "never",
        "tabWidth": 4,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "printWidth": 160
    },
    "release": {
        "preset": {
            "publishOvsx": false
        }
    }
}
